{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "",
    "Resources": {
        "snsPolicy": {
            "Type": "AWS::SNS::TopicPolicy",
            "Properties": {
                "PolicyDocument": {
                    "Statement": [
                        {
                            "Sid": "MyTopicPolicy",
                            "Effect": "Allow",
                            "Principal": "*",
                            "Action": [
                                "sns:Publish"
                            ],
                            "Resource": "arn:aws:sns:MyTopic",
                            "Condition": {
                                "StringEquals": {
                                    "aws:PrincipalAccount": "123456789012"
                                }
                            }
                        }
                    ]
                }
            }
        }
    }
}