{
    "type": "object",
    "additionalProperties": false,
    "required": [
        "XMLName",
        "Name",
        "Time",
        "Failures",
        "TestSuites"
    ],
    "definitions": {
        "XMLName": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "Space",
                "Local"
            ],
            "properties": {
                "Space": {
                    "type": "string"
                },
                "Local": {
                    "type": "string",
                    "minLength": 1
                }
            }
        }
    },
    "properties": {
        "XMLName": {
            "$ref": "#/definitions/XMLName"
        },
        "Name": {
            "type": "string",
            "minLength": 1
        },
        "Time": {
            "type": "string",
            "pattern": "^([0-9]*(\\w[0-9]*)?[.])?[0-9]+\\w$"
        },
        "Failures": {
            "type": "string",
            "pattern": "^\\d+$"
        },
        "TestSuites": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "XMLName",
                    "Name",
                    "Failures",
                    "Tests",
                    "TestCases"
                ],
                "properties": {
                    "XMLName": {
                        "$ref": "#/definitions/XMLName"
                    },
                    "Name": {
                        "type": "string",
                        "pattern": "^\\[\\w+\\]$"
                    },
                    "Failures": {
                        "type": "string",
                        "pattern": "^\\d+$"
                    },
                    "Tests": {
                        "type": "string",
                        "pattern": "^\\d+$"
                    },
                    "TestCases": {
                        "type": "array",
                        "minItems": 1,
                        "items": {
                            "type":"object",
                            "required": [
                                "XMLName",
                                "Name",
                                "Failures"
                            ],
                            "properties": {
                                "XMLName": {
                                    "$ref": "#/definitions/XMLName"
                                },
                                "Name": {
                                    "type": "string",
                                    "pattern": "^\\[(.)+\\](.|\n)+$"
                                },
                                "Failures": {
                                    "type": "array",
                                    "minItems": 1,
                                    "items": {
                                        "type": "object",
                                        "additionalProperties": false,
                                        "required": [
                                            "XMLName",
                                            "Type",
                                            "Message"
                                        ],
                                        "properties": {
                                            "XMLName": {
                                                "$ref": "#/definitions/XMLName"
                                            },
                                            "Type": {
                                                "type": "string",
                                                "minLength": 1
                                            },
                                            "Message": {
                                                "type": "string",
                                                "pattern": "^A problem was found on '(.)+' file in line \\d+, (.)+, but (.)+.$"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
