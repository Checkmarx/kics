{
    "type": "array",
    "minItems": 1,
    "definitions": {
        "file_name_pattern": {
            "type": "string",
            "oneOf": [
                {
                    "pattern": "^(.)*(:)*(http:|https:|www\\.)(.)+$"
                },
                {
                    "pattern": "^([\\w\\-. ]+(\\\\|\\/))*([\\w\\-. ]+(\\\\|\\/).(.)*)$"
                }
            ]
        },
        "similarity_id_pattern": {
            "type": "string",
            "minLength": 1,
            "pattern": "^[A-Fa-f0-9]{64}$"
        }
    },
    "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
            "type",
            "check_name",
            "description",
            "categories",
            "location",
            "severity",
            "fingerprint"
        ],
        "properties": {
            "type": {
                "type": "string",
                "const": "issue"
            },
            "check_name": {
                "type": "string",
                "minLength": 1
            },
            "description": {
                "type": "string",
                "minLength": 1
            },
            "categories": {
                "type": "array",
                "minItems": 1,
                "items": {
                    "type": "string",
                    "const": "Security"
                }
            },
            "location": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "path",
                    "lines"
                ],
                "properties": {
                    "path": {
                        "$ref": "#/definitions/file_name_pattern"
                    },
                    "lines": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "begin"
                        ],
                        "properties": {
                            "begin": {
                                "type": "integer",
                                "minimum": 1
                            }
                        }
                    }
                }
            },
            "reference_location": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "path",
                    "lines"
                ],
                "properties": {
                    "path": {
                         "type": "string"
                    },
                    "lines": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "begin"
                        ],
                        "properties": {
                            "begin": {
                                "type": "integer"
                            }
                        }
                    }
                }
            },
            "severity": {
                "type": "string",
                "enum": ["info", "minor", "major", "critical"]
            },
            "fingerprint": {
                "$ref": "#/definitions/similarity_id_pattern"
            }
        }
    }
}
