{
    "type": "object",
    "additionalProperties": false,
    "definitions": {
        "query_id_pattern": {
            "type": "string",
            "minLength": 1,
            "pattern": "^[a-f0-9]{8}-[a-f0-9]{4}-4{1}[a-f0-9]{3}-[89ab]{1}[a-f0-9]{3}-[a-f0-9]{12}$"
        },
        "description_text_pattern": {
            "type": "string",
            "minLength": 1,
            "pattern": "^.{1,500}$"
        },
        "query_name_pattern": {
            "type": "string",
            "minLength": 1,
            "pattern": "^[a-zA-Z][a-zA-Z0-9_ \\-\"',:$.()]{0,119}$"
        },
        "description_id_pattern": {
            "type": "string",
            "minLength": 1,
            "pattern": "^[a-f0-9]{8}$"
        }
    },
    "required": [
        "id",
        "queryName",
        "severity",
        "category",
        "descriptionText",
        "descriptionUrl",
        "cloudProvider",
        "platform",
        "descriptionID", 
        "cwe"
    ],
    "properties": {
        "id": {
            "$ref": "#/definitions/query_id_pattern"
        },
        "queryName": {
            "$ref": "#/definitions/query_name_pattern",
            "type": "string",
            "minLength": 1,
            "maxLength": 120
        },
        "severity": {
            "type": "string",
            "enum": [
                "TRACE",
                "CRITICAL",
                "HIGH",
                "MEDIUM",
                "LOW",
                "INFO"
            ]
        },
        "oldSeverity": {
            "type": "string",
            "enum": [
                "TRACE",
                "HIGH",
                "MEDIUM",
                "LOW",
                "INFO"
            ]
        },
        "category": {
            "type": "string",
            "enum": [
                "Access Control",
                "Availability",
                "Backup",
                "Best Practices",
                "Build Process",
                "Bill Of Materials",
                "Encryption",
                "Insecure Configurations",
                "Insecure Defaults",
                "Networking and Firewall",
                "Observability",
                "Resource Management",
                "Secret Management",
                "Supply-Chain",
                "Structure and Semantics"
            ]
        },
        "descriptionText": {
            "$ref": "#/definitions/description_text_pattern",
            "type": "string",
            "minLength": 1,
            "maxLength" : 500
        },
        "descriptionUrl": {
            "type": "string",
            "format": "uri"
        },
        "cloudProvider": {
            "type": "string",
            "enum": [
                "alicloud",
                "aws",
                "azure",
                "common",
                "gcp",
                "nifcloud",
                "tencentcloud"
            ]
        },
        "platform": {
            "type": "string",
            "enum": [
                "Ansible",
                "AzureResourceManager",
                "Buildah",
                "CICD",
                "CloudFormation",
                "Crossplane",
                "Common",
                "Dockerfile",
                "DockerCompose",
                "GRPC",
                "GoogleDeploymentManager",
                "Knative",
                "Kubernetes",
                "ServerlessFW",
                "OpenAPI",
                "Terraform",
                "Pulumi"
            ]
        },
        "descriptionID": {
            "$ref": "#/definitions/description_id_pattern"
        },
        "aggregation": {
            "type": "number",
            "minimum": 1
        },
        "override": {
            "type": "object",
            "additionalProperties": false,
            "patternProperties": {
                "^\\d[\\.\\d]+$": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "id",
                        "queryName",
                        "descriptionUrl"
                    ],
                    "properties": {
                        "id": {
                            "$ref": "#/definitions/query_id_pattern"
                        },
                        "queryName": {
                            "type": "string",
                            "minLength": 8
                        },
                        "descriptionUrl": {
                            "type": "string",
                            "format": "uri"
                        },
                        "descriptionText": {
                            "type": "string",
                            "minLength": 16
                        }
                    }
                }
            }
        },
        "experimental": {
            "type": "string",
            "enum": [
                "true"
            ]
        },
        "cwe": {
            "type": "string"
        }
    }
}
