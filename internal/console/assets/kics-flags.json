{
  "ci": {
    "flagType": "bool",
    "shorthandFlag": "",
    "defaultValue": "false",
    "usage": "display only log messages to CLI output (mutually exclusive with silent)"
  },
  "log-file": {
    "flagType": "bool",
    "shorthandFlag": "l",
    "defaultValue": "false",
    "usage": "writes log messages to log file",
    "deprecated": true,
    "deprecatedInfo": "please use --log-path instead"
  },
  "log-format": {
    "flagType": "str",
    "shorthandFlag": "f",
    "defaultValue": "pretty",
    "usage": "determines log format (${logFormatPretty},${logFormatJSON})"
  },
  "log-level": {
    "flagType": "str",
    "shorthandFlag": "",
    "defaultValue": "INFO",
    "usage": "determines log level (${supportedLogLevels})",
    "validation": "validateStrEnum"
  },
  "log-path": {
    "flagType": "str",
    "shorthandFlag": "",
    "defaultValue": "",
    "usage": "path to generate log file (${defaultLogFile})"
  },
  "no-color": {
    "flagType": "bool",
    "shorthandFlag": "",
    "defaultValue": "false",
    "usage": "disable CLI color output"
  },
  "profiling": {
    "flagType": "str",
    "shorthandFlag": "",
    "defaultValue": "",
    "usage": "enables performance profiler that prints resource consumption metrics in the logs during the execution (CPU, MEM)"
  },
  "silent": {
    "flagType": "bool",
    "shorthandFlag": "s",
    "defaultValue": "false",
    "usage": "silence stdout messages (mutually exclusive with verbose and ci)"
  },
  "verbose": {
    "flagType": "bool",
    "shorthandFlag": "v",
    "defaultValue": "false",
    "usage": "write logs to stdout too (mutually exclusive with silent)"
  }
}
